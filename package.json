{
  "name": "oai-commit-mesg-gen-ius-Generator",
  "displayName": "oai-commit-mesg-gen-ius-Generator",
  "description": "Automatically generate commit messages using AI",
  "version": "0.0.1",
  "publisher": "youngsikkk",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/youngsikkk/ai-commit-msg"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "keywords": [
    "git",
    "commit",
    "ai",
    "openai",
    "conventional-commits"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-commit-msg.generate",
        "title": "AI Commit: Generate"
      },
      {
        "command": "ai-commit-msg.setApiKey",
        "title": "AI Commit: Set API Key"
      }
    ],
    "configuration": {
      "title": "AI Commit Message Generator",
      "properties": {
        "aiCommit.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "OpenAI model to use for generating commit messages"
        },
        "aiCommit.maxDiffChars": {
          "type": "number",
          "default": 12000,
          "description": "Maximum number of characters from the diff to send to the AI"
        },
        "aiCommit.exclude": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules",
            "*.lock",
            "dist",
            "build",
            "*.min.*"
          ],
          "description": "Glob patterns for files to exclude from the diff"
        },
        "aiCommit.language": {
          "type": "string",
          "enum": ["english", "korean"],
          "default": "english",
          "description": "Language for commit message subject (type and scope remain in English)"
        }
      }
    },
    "keybindings": [
      {
        "command": "ai-commit-msg.generate",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/minimatch": "^5.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "minimatch": "^10.1.1",
    "openai": "^6.15.0",
    "simple-git": "^3.30.0"
  }
}
